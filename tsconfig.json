{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "bundler",  // تغییر اینجا
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "baseUrl": "/",  // حذف کامل این خط
    "paths": {
      "@payload-config": [
        "./payload.config.ts"  // با ./ شروع می‌شه
      ],
      "@/*": [
        "./src/*"  // با ./ شروع می‌شه
      ]
    },
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}